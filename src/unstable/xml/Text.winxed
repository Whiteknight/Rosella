class Rosella.Xml.Text
{
    var text;
    function Text(string text)
    {
        self.text = text;
    }

    function get_text() { return self.text; }

    function to_xml()
    {
        var sb = new 'StringBuilder';
        self.to_xml_sb(sb, 0);
        return sb;
    }

    function to_xml_sb(var sb, int indent)
    {
        string indent_str = indent_level(indent);
        push(sb, indent_str);
        push(sb, self.text);
    }
}
