INIT {
    pir::load_bytecode("rosella/tap_harness.pbc");
}

my $harness := Rosella::Harness.new();
$harness.initialize();
$harness.add_test_dirs("NQP",
    "t/action",
    "t/container",
    "t/event",
    "t/prototype"

);
$harness.run();

my $output := Rosella::Harness::Output::Console.new();
$output.show_results_summary($harness);
